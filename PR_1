
public class Main {
    public static class CS {
        public static void main(String[] args) {
            float side = 10;
            double diagonal =  (side * Math.sqrt(2));
            double circ = Math.PI * diagonal;

            System.out.println("Длина окружности: " + circ + " см");
        }
    }
}

